# Environment Variables Example
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration (if needed in future)
# DATABASE_URL=sqlite:///dask_plus.db

# API Keys (if needed)
# KANDILLI_API_KEY=your-api-key-here
# AFAD_API_KEY=your-api-key-here

# Data Generation
AUTO_GENERATE_DATA=True
BUILDING_COUNT=10000

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Performance
MAX_WORKERS=4
CACHE_TIMEOUT=300

# Security
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-in-production
SESSION_TIMEOUT=3600

# Features
ENABLE_KANDILLI=True
ENABLE_AI_PRICING=True
ENABLE_PARAMETRIC_TRIGGER=True

# Earthquake Data
MIN_MAGNITUDE=2.0
MAX_TRIGGER_DISTANCE_KM=250

# Premium Calculation
BASE_PREMIUM_RATE=0.01
RISK_FACTOR_MULTIPLIER=1.0

# Payout Configuration
MAX_PAYOUT_DAYS=14
MIN_PGA_THRESHOLD=0.10
